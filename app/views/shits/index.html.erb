<h1>Shit Pedro Says</h1>

<div id="shits">
  <p>
  <%= @shit.content %>
  </p>
  <p><%= link_to("Previous", @shit.prev) if @shit.prev %></p>
  <p><%= link_to("Next", @shit.next) if @shit.next %></p>
</div>

<% content_for :jsapp do %>
<script type="text/javascript">

  $(function() {

    $('#shits').empty();

    window.router = new ShitPedroSays.Routers.ShitsRouter({shits: <%= @shits.to_json.html_safe -%>});
    Backbone.history.start( { pushState : true });
  });
</script>
<% end %>