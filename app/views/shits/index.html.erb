<section>
  <h1>Shit Pedro Says</h1>
  <div id="shit">
    <p>
    <%= @shit.content %>
    </p>
    <p><%= link_to("Previous", @shit.prev) if @shit.prev %></p>
    <p><%= link_to("Next", @shit.next) if @shit.next %></p>
  </div>
</section>

<% content_for :jsapp do %>
<script type="text/javascript">

  $(function() {

    $('#shit').empty();

    window.router = new ShitPedroSays.Routers.ShitsRouter({shits: <%= @shits.shuffle.to_json.html_safe -%>});
    Backbone.history.start( { pushState : true });
  });
</script>
<% end %>